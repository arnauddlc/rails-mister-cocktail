<div class="container">
	<div class="row">
	<% @cocktails.each do |cocktail| %>
		<div class="col-xs-12 col-sm-6 col-md-4">
			<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.1)),
         url('<%= image_path cocktail.photo.url(:thumnail), :width=>280, :height=>280, :crop=>"fill" ; %>')">
				<h3><%= cocktail.name %></h3>
				 <%= link_to cocktail_path(cocktail) do %>
					<div class="card-details">
						<p>Click for more details</p>
						<ul> <% cocktail.doses.each do |dose| %>
							<li><p><i class="fas fa-glass-martini"></i> <u><%= dose.ingredient.name %></u> <%= "- #{dose.description}" %></p></li>
							<% end %>
						</ul>
					</div>
					<% end %>
			</div>
		</div>
		<% end %>
		<div class="col-xs-12 col-sm-6 col-md-4">
			<div class="card" id="add_cocktail">
				<h2><i class="fas fa-plus-circle"></i></h2>
				<%= link_to new_cocktail_path do %>
				<div class="card-details">
						<p>Click to add a new cocktail</p>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
