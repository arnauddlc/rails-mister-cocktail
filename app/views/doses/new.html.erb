<div class="container">
	<div class="wrap-info">

		<h1>Add a dose to <%= @cocktail.name %></h1>

		<%= simple_form_for ([@cocktail, @dose]) do |f| %>
			<%= f.association :ingredient %>
			<%= f.input :description %>
		  <br>
			<%= f.submit html: { class: "button-pers" } %>
		<% end %>
		<br>

		<%= link_to "Return to cocktail view", cocktail_path(@cocktail) %>
	</div>
</div>